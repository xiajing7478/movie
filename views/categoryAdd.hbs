<div class="row">
    <h3>{{title}}</h3>
    <div class="col-md-12 column">
        <form class="form-horizontal" role="form" method="post" action="/category">
            <input type="hidden" id="id" name="id" value="{{category.id}}" >
            <input type="hidden" id="createTime" name="createTime" value="{{category.createTime}}" >
            <div class="form-group">
                <label for="title" class="col-sm-2 control-label">电影名称</label>
                <div class="col-sm-10">
                    <input type="text" value="{{category.name}}" class="form-control" id="name" name="name" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-default">提交</button>
                </div>
            </div>
        </form>
    </div>
</div>

