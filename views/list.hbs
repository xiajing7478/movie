<style type="text/css">
    #pageTool{float: right;}
    #pageList{list-style: none;padding: 0;margin: 0; float: left;}
    #pageList > li{
        float: left;
        height: 30px;
        width: 30px;
        text-align: center;
        line-height: 30px;
        border: 1px solid #c1c1c1;
    }

    .active{
        background: #c1c1c1;
        color: #fff;
     }

    li+li{
        margin-left: 8px;
    }
</style>
<div class="row">
    <div class="col-md-12">
        <h3>{{title}}</h3>
    </div>
    <div class="col-md-12" style="padding: 15px 0px;">
        <div class="col-md-offset-6 col-md-2">
            <input type="button" id="btn_export" class="btn btn-primary btn-block" value="导出">
        </div>
        <div class="col-md-offset-1 col-md-3">
            <input type="hidden" id="hide_categoryId" value="{{categoryId}}">
            <select class="form-control" id="categorySort">
                <option value="0">全部</option>
                {{#each categorys}}
                    <option value="{{id}}">{{name}}</option>
                {{/each}}
            </select>
            <!--<input type="text" value="" class="form-control" placeholder="请输入电影名称" is="searchText">-->
        </div>
    </div>
    <div class="col-md-12">
        <table class="table table-condensed table-hover table-bordered">
            <thead>
            <tr>
                <th>编号</th>
                <th>电影名称</th>
                <th>国家</th>
                <th>语言</th>
                <th>年份</th>
                <th>价格</th>
                <th>导演</th>
                <th>访问量</th>
                <th>创建时间</th>
                <th>更新时间</th>
                <th>电影分类</th>
                <th>修改</th>
                <th>删除</th>
            </tr>
            </thead>
            <tbody>
            {{#each movies}}
                <tr>
                    <td><a href="./detail/{{id}}">{{id}}</a></td>
                    <th>{{title}}</th>
                    <td>{{country}}</td>
                    <td>{{language}}</td>
                    <td>{{year}}</td>
                    <td>{{price}}</td>
                    <td>{{doctor}}</td>
                    <td>{{pv}}</td>
                    <td>{{createTime}}</td>
                    <td>{{updateTime}}</td>
                    <td data-id="{{categoryId}}">{{name}}</td>
                    <td><a href="./admins?id={{id}}">修改</a></td>
                    <td><a class="delete" data-id="{{id}}" href="javascript:void(0);">删除</a></td>
                </tr>
            {{/each}}
            </tbody>
        </table>
    </div>
    <div class="col-md-2">
        <a href="./admins" class="btn btn-block btn-danger">Add</a>
    </div>
    <div class="col-md-offset-3 col-md-7">
        <input type="hidden" value="{{totalNums counts 10}}" id="totalCounts">
        <input type="hidden" value="{{page}}" id="page">
        <div id="pageTool">
            <ul id="pageList"></ul>
        </div>
    </div>
</div>
<script src="/javascripts/admins.js"></script>